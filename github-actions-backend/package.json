{
  "name": "generic-monitor-backend",
  "version": "1.0.0",
  "description": "Backend for Generic Web Monitor - A flexible, domain-agnostic monitoring system",
  "main": "server.js",
  "bin": {
    "ai-monitor": "./cli.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "scrape": "node scraper.js",
    "analyze": "node ai-analyzer.js analyze",
    "brief": "node ai-analyzer.js brief",
    "init-db": "node scripts/init-db.js",
    "migrate-to-postgres": "node migrate-to-postgres.js",
    "test": "jest",
    "docker:build": "docker build -t ai-monitor-backend .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data ai-monitor-backend"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "axios": "^1.12.0",
    "better-sqlite3": "^9.2.2",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "groq-sdk": "^0.7.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "puppeteer": "^22.0.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
